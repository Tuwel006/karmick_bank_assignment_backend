{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.json"
  },
  "monorepo": true,
  "root": "apps/api-gateway",
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway",
      "compilerOptions": {
        "deleteOutDir": true,
        "webpack": true
      }
    },
    "accounts-service": {
      "type": "application",
      "root": "apps/accounts-service",
      "entryFile": "main",
      "sourceRoot": "apps/accounts-service/src",
      "compilerOptions": {
        "deleteOutDir": true,
        "webpack": true
      }
    },
    "users-service": {
      "type": "application",
      "root": "apps/users-service",
      "entryFile": "main",
      "sourceRoot": "apps/users-service/src",
      "compilerOptions": {
        "deleteOutDir": true,
        "webpack": true
      }
    }
  }
}
