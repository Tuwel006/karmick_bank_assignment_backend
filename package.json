{
  "name": "karmick_bank_backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"utils/**/*.ts\"",
    "start": "nest start",
    "dev": "concurrently -c \"cyan.bold,green.bold,magenta.bold\" \"npm:dev-api-gateway\" \"npm:dev-accounts-service\" \"npm:dev-users-service\"",
    "dev-api-gateway": "nest start --watch api-gateway",
    "dev-accounts-service": "nest start --watch accounts-service",
    "dev-users-service": "nest start --watch users-service",
    "stg": "NODE_ENV=staging concurrently -c \"cyan.bold,green.bold,magenta.bold\" \"npm:stg-api-gateway\" \"npm:stg-accounts-service\" \"npm:stg-users-service\"",
    "stg-api-gateway": "node dist/apps/api-gateway/main",
    "stg-accounts-service": "node dist/apps/accounts-service/main",
    "stg-users-service": "node dist/apps/users-service/main",
    "prod": "NODE_ENV=production concurrently -c \"cyan.bold,green.bold,magenta.bold\" \"npm:prod-api-gateway\" \"npm:prod-accounts-service\" \"npm:prod-users-service\"",
    "prod-api-gateway": "node dist/apps/api-gateway/main",
    "prod-accounts-service": "node dist/apps/accounts-service/main",
    "prod-users-service": "node dist/apps/users-service/main",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{apps,utils}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest-e2e.json",
    "make:service": "node scripts/make-service.js"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/microservices": "^11.1.12",
    "@nestjs/platform-express": "^11.0.1",
    "concurrently": "^9.2.0",
    "dotenv": "^17.2.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
